# Create project structure
mkdir video-platform
cd video-platform

# Create backend
mkdir -p backend/{config,controllers,middleware,models,routes,utils}
mkdir backend/uploads

# Create frontend
mkdir -p frontend/src/{components,pages,services,styles,context}
mkdir frontend/public

# Create all the files as shown above

# Install backend dependencies
cd backend
npm install

# Install frontend dependencies
cd ../frontend
npm install

# Run MongoDB (in separate terminal)
mongod

# Run backend (in separate terminal)
cd backend
npm start

# Run frontend (in separate terminal)
cd frontend
npm start
